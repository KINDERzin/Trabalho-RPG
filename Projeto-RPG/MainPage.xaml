<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto_RPG.MainPage"
             Shell.NavBarIsVisible="False">

    <Grid RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <!-- Tela de fundo -->
            <Image Source="tela_comeco.jpg"
                   Aspect="AspectFill"
                   Grid.RowSpan="4"/>

            <!-- Botão para INICAR -->
            <Button Text="INICIAR"
                    Grid.Row="2"
                    HeightRequest="45"
                    BackgroundColor="Transparent"
                    BorderColor="White"
                    BorderWidth="1"/>

            <!--Botão para VER os DESENVOLVEDORES -->    
            <Button Text="DESENVOLVEDORES"
                    Grid.Row="3"
                    HeightRequest="45"
                    BackgroundColor="Transparent"
                    BorderColor="White"
                    BorderWidth="1"/>



            
            
        </Grid>

</ContentPage>
